<div class="space-y-8">

  <%# ── Profile Card ─────────────────────────────────────────────── %>
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-6">Profile</h2>

    <% if parent.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border-l-4 border-red-400 rounded text-red-700 text-sm">
        <ul class="list-disc list-inside space-y-1">
          <% parent.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: parent, url: parent_path(parent), method: :patch do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Your name",
                autocomplete: "name" %>
        </div>
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                autocomplete: "email" %>
        </div>
      </div>
      <div class="mt-6">
        <%= form.submit "Save Profile",
              class: "px-6 py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# ── Password Change ──────────────────────────────────────────── %>
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-2">Change Password</h2>
    <p class="text-sm text-gray-500 mb-6">Leave blank if you don't want to change your password.</p>

    <%= form_with model: parent, url: parent_path(parent), method: :patch do |form| %>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
          <%= form.password_field :current_password,
                name: "parent[current_password]",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                autocomplete: "current-password",
                placeholder: "Enter your current password" %>
        </div>
        <div>
          <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                autocomplete: "new-password",
                placeholder: "Minimum 6 characters" %>
        </div>
        <div>
          <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password_confirmation,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                autocomplete: "new-password",
                placeholder: "Repeat new password" %>
        </div>
      </div>
      <div class="mt-6">
        <%= form.submit "Update Password",
              class: "px-6 py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# ── Danger Zone ──────────────────────────────────────────────── %>
  <div class="bg-white rounded-2xl shadow-sm border-2 border-red-200 p-6">
    <h2 class="text-xl font-bold text-red-700 mb-2">Danger Zone</h2>
    <p class="text-sm text-gray-600 mb-6">
      Permanently deletes your account along with all children, chore assignments, token history,
      and game sessions. <strong>This cannot be undone.</strong>
    </p>
    <%= button_to parent_path(parent), method: :delete,
          form: { data: { turbo_confirm: "Are you absolutely sure? All your children and data will be permanently deleted." } },
          class: "px-5 py-2 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition cursor-pointer" do %>
      Delete My Account
    <% end %>
  </div>

</div>
