<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= @parent.name.presence || @parent.email %></h1>
      <p class="text-gray-600">Parent account details</p>
    </div>
    <%= link_to super_admin_parents_path, class: "px-4 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 font-semibold transition" do %>
      &larr; All Parents
    <% end %>
  </div>

  <!-- Details Card -->
  <div class="card">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Account Info</h2>
    <dl class="divide-y divide-gray-100">
      <div class="flex py-3 gap-4">
        <dt class="w-32 text-sm font-semibold text-gray-500 shrink-0">Name</dt>
        <dd class="text-gray-800"><%= @parent.name.presence || "â€”" %></dd>
      </div>
      <div class="flex py-3 gap-4">
        <dt class="w-32 text-sm font-semibold text-gray-500 shrink-0">Email</dt>
        <dd class="text-gray-800"><%= @parent.email %></dd>
      </div>
      <div class="flex py-3 gap-4">
        <dt class="w-32 text-sm font-semibold text-gray-500 shrink-0">Status</dt>
        <dd>
          <% if @parent.archived_at.present? %>
            <span class="inline-block bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-semibold">Archived</span>
          <% else %>
            <span class="inline-block bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-semibold">Active</span>
          <% end %>
        </dd>
      </div>
      <div class="flex py-3 gap-4">
        <dt class="w-32 text-sm font-semibold text-gray-500 shrink-0">Joined</dt>
        <dd class="text-gray-800"><%= l(@parent.created_at, format: :long) %></dd>
      </div>
    </dl>
  </div>

  <!-- Actions Card -->
  <div class="card">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Actions</h2>
    <div class="flex flex-wrap gap-3">
      <%= link_to edit_super_admin_parent_path(@parent), class: "px-5 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-semibold transition shadow-sm" do %>
        Edit
      <% end %>
      <%= button_to impersonate_super_admin_parent_path(@parent), method: :post, class: "px-5 py-2 rounded-lg bg-purple-600 text-white hover:bg-purple-700 font-semibold transition shadow-sm" do %>
        Impersonate
      <% end %>
      <% if @parent.archived_at.present? %>
        <%= button_to reactivate_super_admin_parent_path(@parent), method: :post, class: "px-5 py-2 rounded-lg bg-green-600 text-white hover:bg-green-700 font-semibold transition shadow-sm" do %>
          Reactivate
        <% end %>
      <% end %>
    </div>
  </div>
</div>
