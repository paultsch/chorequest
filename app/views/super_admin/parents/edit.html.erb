<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Edit Parent</h1>
      <p class="text-gray-600"><%= @parent.email %></p>
    </div>
    <%= link_to super_admin_parent_path(@parent), class: "px-4 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 font-semibold transition" do %>
      &larr; Back
    <% end %>
  </div>

  <!-- Form Card -->
  <div class="card max-w-lg">
    <%= form_with model: [:super_admin, @parent], local: true, class: "space-y-5" do |f| %>
      <% if @parent.errors.any? %>
        <div class="p-4 bg-red-50 border-l-4 border-red-500 text-red-700 rounded-lg">
          <ul class="list-disc list-inside text-sm space-y-1">
            <% @parent.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="flex gap-3 pt-2">
        <%= f.submit 'Save Changes', class: "px-6 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-semibold transition shadow-sm cursor-pointer" %>
        <%= link_to super_admin_parent_path(@parent), class: "px-6 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 font-semibold transition" do %>Cancel<% end %>
      </div>
    <% end %>
  </div>
</div>
