<div class="space-y-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">Super Admin Dashboard</h1>
    <p class="text-gray-600">Platform overview &mdash; signed in as <span class="font-semibold text-red-700"><%= current_admin_user.name %></span></p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="card bg-gradient-to-br from-blue-50 to-blue-100 border-l-4 border-blue-500">
      <div class="text-blue-600 text-3xl mb-2">&#128106;</div>
      <p class="text-gray-600 text-sm">Total Parents</p>
      <p class="text-3xl font-bold text-gray-800"><%= @parents_count %></p>
    </div>

    <div class="card bg-gradient-to-br from-green-50 to-green-100 border-l-4 border-green-500">
      <div class="text-green-600 text-3xl mb-2">&#10003;</div>
      <p class="text-gray-600 text-sm">Active Parents</p>
      <p class="text-3xl font-bold text-gray-800"><%= @active_parents_count %></p>
    </div>

    <div class="card bg-gradient-to-br from-purple-50 to-purple-100 border-l-4 border-purple-500">
      <div class="text-purple-600 text-3xl mb-2">&#128103;</div>
      <p class="text-gray-600 text-sm">Total Children</p>
      <p class="text-3xl font-bold text-gray-800"><%= @children_count %></p>
    </div>

    <div class="card bg-gradient-to-br from-orange-50 to-orange-100 border-l-4 border-orange-500">
      <div class="text-orange-600 text-3xl mb-2">&#128203;</div>
      <p class="text-gray-600 text-sm">Total Chores</p>
      <p class="text-3xl font-bold text-gray-800"><%= @chores_count %></p>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="card">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <%= link_to super_admin_parents_path, class: "px-6 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-semibold transition-all shadow-sm" do %>
        Manage Parents
      <% end %>
      <%= link_to "Sign Out", destroy_admin_user_session_path, data: { turbo_method: :delete }, class: "px-6 py-3 rounded-lg bg-red-600 text-white hover:bg-red-700 font-semibold transition-all shadow-sm" %>
    </div>
  </div>
</div>
