<%= form_with(model: chore, local: true, class: 'space-y-6') do |form| %>
  <% if chore.errors.any? %>
    <div class="p-4 bg-red-50 border-l-4 border-red-500 text-red-700 rounded-lg">
      <h2 class="font-semibold"><%= pluralize(chore.errors.count, "error") %> prohibited this chore from being saved:</h2>
      <ul class="mt-2 list-disc list-inside text-sm text-red-700">
        <% chore.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400' %>
  </div>

  <div>
    <%= form.label :description, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_area :description, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400', rows: 4 %>
  </div>

  <div>
    <%= form.label :definition_of_done, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_area :definition_of_done, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400', rows: 3 %>
  </div>

  <div>
    <%= form.label :token_amount, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.number_field :token_amount, min: 0, max: 200, step: 1, class: 'mt-1 block w-40 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400' %>
    <p class="text-xs text-gray-500 mt-1">Enter a token value between 0 and 200.</p>
  </div>

  <div>
    <%= form.label :recurrence, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.select :recurrence, options_for_select([['Daily','daily'],['Weekly','weekly'],['Monthly','monthly']], chore.recurrence), { include_blank: 'Select recurrence' }, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400' %>
  </div>

  <div>
    <button type="submit" class="w-full inline-flex items-center justify-center py-3 px-6 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">Create Chore</button>
  </div>
<% end %>
