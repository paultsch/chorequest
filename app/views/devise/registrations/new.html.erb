<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Create a parent account</h2>

    <% if resource.errors.any? %>
      <div class="mb-4 bg-red-50 border-l-4 border-red-500 text-red-700 p-3 rounded">
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Full name</label>
        <div class="mt-1">
          <%= f.text_field :name, id: 'name', autofocus: true, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div>
        <label for="display_name" class="block text-sm font-medium text-gray-700">Display name</label>
        <div class="mt-1">
          <%= f.text_field :display_name, id: 'display_name', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
        <div class="mt-1">
          <%= f.telephone_field :phone, id: 'phone', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <div class="mt-1">
          <%= f.email_field :email, autocomplete: 'email', id: 'email', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <div class="mt-1">
          <%= f.password_field :password, autocomplete: 'new-password', id: 'password', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
        </div>
      </div>

      <div>
        <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Password confirmation</label>
        <div class="mt-1">
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', id: 'password_confirmation', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div class="flex items-center">
        <%= f.check_box :accepted_terms, id: 'accepted_terms', class: 'h-4 w-4 text-green-600 border-gray-300 rounded' %>
        <label for="accepted_terms" class="ml-2 block text-sm text-gray-900">I agree to the Terms of Service</label>
      </div>

      <div>
        <%= f.submit 'Sign up', class: 'w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 font-medium' %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
