<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Sign in to your account</h2>

    <% if resource.errors.any? %>
      <div class="mb-4 bg-red-50 border-l-4 border-red-500 text-red-700 p-3 rounded">
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', id: 'email', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <div class="mt-1">
          <%= f.password_field :password, autocomplete: 'current-password', id: 'password', class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-400' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, id: 'remember_me', class: 'h-4 w-4 text-green-600 border-gray-300 rounded' %>
          <label for="remember_me" class="ml-2 block text-sm text-gray-900">Remember me</label>
        </div>
      <% end %>

      <div>
        <button type="submit" id="parent-login-submit" class="w-full inline-flex items-center justify-center py-3 px-6 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">Log in</button>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
